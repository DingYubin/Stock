<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#101419">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#E0E1E1"
            android:id="@+id/stockNameView"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="平安银行"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#E0E1E1"
            android:id="@+id/stockCodeView"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="000001"
            android:layout_below="@+id/stockNameView"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_weight="1"
        android:textColor="#E0E1E1"
        android:id="@+id/stockPriceView"
        android:gravity="center"
        android:textStyle="bold"
        android:text="12.02"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#E0E1E1"
        android:id="@+id/stockChangeRateView"
        android:gravity="center"
        android:background="#FF0000"
        android:text="8.88%"/>
</LinearLayout>